<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Prueba4.views.Page1">
    <ContentPage.Content>
        <StackLayout>
            <Frame BackgroundColor="Black" Padding="24" CornerRadius="0">
                <Label Text="Flash Inventory" HorizontalTextAlignment="Start" TextColor="White" FontSize="36"/>
            </Frame>
            <Label Text="Usuario" HorizontalOptions="Center" FontSize="18" Margin="0,20,0,0"/>
            <Entry Placeholder="ingrese su usuario" HorizontalOptions="Center" HorizontalTextAlignment="Center"></Entry>
            <Label Text="Contraseña" HorizontalOptions="Center" FontSize="18" Margin="0,40,0,0"/>
            <Entry Placeholder="ingrese su contraseña" IsPassword="true" MaxLength="6" HorizontalOptions="Center" HorizontalTextAlignment="Center"></Entry>
            <Button BackgroundColor="Black" Text="Ingresar" TextColor="White" WidthRequest="100" HeightRequest="50" CornerRadius="10"
                BorderColor="Black" HorizontalOptions="CenterAndExpand" Margin="0,30,0,0" Clicked="Button_Clicked_1"></Button>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>